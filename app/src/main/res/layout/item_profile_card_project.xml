<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:radius="16dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:text="Safe Campus by Kelate4Lyfe"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/tvGithub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Github link for Application: https://github.com/afham39/SafeCampus.git"
                android:autoLink="web"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvWeb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Webiste link for Admin Safe Campus Panel: https://safecampus-f2428.web.app/"
                android:autoLink="web"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:clickable="true"
                android:focusable="true" />


        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
